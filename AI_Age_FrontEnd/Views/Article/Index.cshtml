@model List<AI_Age_FrontEnd.DTOs.ArticleDto>

@{
    ViewData["Title"] = "Bài hướng dẫn";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>Bài hướng dẫn</h1>
                    <p class="mb-0">Khám phá các bài hướng dẫn được thiết kế dành riêng cho người cao tuổi, giúp bạn làm quen và thành thạo công nghệ AI một cách dễ dàng và hiệu quả.</p>
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="current">Bài hướng dẫn</li>
            </ol>
        </div>
    </nav>
</div><!-- End Page Title -->

<section id="courses" class="courses section">
    <div class="container">
        <!-- Search Bar -->
        <div class="search-bar mb-4" data-aos="fade-up" data-aos-delay="100">
            <form asp-controller="Course" asp-action="Search" method="get" class="d-flex align-items-center">
                <input type="text" name="query" class="form-control" placeholder="Tìm kiếm bài hướng dẫn (ví dụ: Nhập môn AI)" aria-label="Tìm kiếm bài hướng dẫn" style="width: 500px; margin-right: 1rem; border-color: #5fcf80; padding: 0.375rem 0.75rem;">
                <button type="submit" class="btn" style="background-color: #5fcf80; color: white; border: none; padding: 0.375rem 0.75rem;">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
            </form>
        </div>
        <div class="row">
            @if (Model == null || !Model.Any())
            {
                <div class="col-12 text-center">
                    <p class="text-muted">Không có bài viết nào.</p>
                </div>
            }
            else
            {
                @foreach (var article in Model)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                        <div class="course-item">
                            <img src="@article.Image" class="img-fluid" alt="@article.Title" style="width: 100%; height: 200px; object-fit: cover;">
                            <div class="course-content">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <p class="category">@article.CategoryName</p>
                                </div>
                                <h3><a asp-controller="Article" asp-action="Details" asp-route-id="@article.ArticleId">@article.Title</a></h3>
                                <p class="description">@article.Summary</p>
                                <div class="trainer d-flex justify-content-between align-items-center">
                                    <div class="trainer-profile d-flex align-items-center">
                                        <img src="~/img/profile.png" class="img-fluid" alt="Author">
                                        <a href="#" class="trainer-link">@article.AuthorName</a>
                                    </div>
                                    <div class="trainer-rank d-flex align-items-center">
                                        <i class="bi bi-person user-icon"></i>&nbsp;@article.Views
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
