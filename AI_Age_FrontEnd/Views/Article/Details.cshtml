@model AI_Age_FrontEnd.DTOs.ArticleDto

@{
    ViewData["Title"] = "Chi tiết khóa học";
}

<!-- Article Section -->
<section id="course-article" class="course-article section">
    <div class="container" data-aos="fade-up">
        @if (Model != null)
        {
            <div class="row">
                <!-- Main Content -->
                <div class="col-lg-8 col-md-12 article-content">
                    <header class="article-header">
                        <h1>@Model.Title</h1>
                        @if (Model.AdditionalImages != null && Model.AdditionalImages.Any())
                        {
                            foreach (var imageUrl in Model.AdditionalImages)
                            {
                                <img src="@imageUrl" class="img-fluid article-hero mb-3" alt="@Model.Title" style="width: 100%; max-height: 400px; object-fit: cover; border-radius: 10px;">
                            }
                        }
                    </header>
                    <div class="article-body">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
                <!-- Sidebar -->
                <div class="col-lg-4 col-md-12 article-sidebar">
                    <div class="sidebar-box">
                        <h3>Chi tiết về bài viết</h3>
                        <ul class="course-info-list">
                            <li>
                                <h5>Người viết</h5>
                                <p><a href="#">@Model.AuthorName</a></p>
                            </li>
                            <li>
                                <h5>Lượt xem</h5>
                                <p>@Model.Views</p>
                            </li>
                            <li>
                                <h5>Cấp độ</h5>
                                <p>
                                    @switch (Model.Level)
                                    {
                                        case 1:
                                            <span>Cơ bản</span>
                                            ; break;
                                        case 2:
                                            <span>Trung bình</span>
                                            ; break;
                                        case 3:
                                            <span>Nâng cao</span>
                                            ; break;
                                        default:
                                            <span>Không xác định</span>
                                            ; break;
                                    }
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p>Bài viết không tồn tại hoặc có lỗi khi tải dữ liệu.</p>
        }
    </div>
</section><!-- /Article Section -->