@{
    ViewData["Title"] = "Quản lý Video";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Video</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Video</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header video-card__header">
            <div class="video-card__title">
                <i class="fas fa-video me-2"></i>
                Danh sách Video
            </div>
            <a asp-area="Admin" asp-controller="VideoArticleManagement" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover video-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hình ảnh</th>
                        <th>Tiêu đề</th>
                        <th>Thể loại</th>
                        <th>Người đăng</th>
                        <th>Ngày đăng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>
                            <img src="~/images/videos/tech-video-2024.jpg" alt="Video công nghệ 2024" class="video-table__image" />
                        </td>
                        <td>Video hướng dẫn công nghệ 2024</td>
                        <td>Công nghệ</td>
                        <td>Admin</td>
                        <td>22-05-2024</td>
                        <td class="video-table__actions">
                            <a asp-area="Admin" asp-controller="VideoArticleManagement" asp-action="Edit" asp-route-id="1" class="btn btn-warning video-table__action-button" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-danger video-table__action-button" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>
                            <img src="~/images/videos/life-hacks-video.jpg" alt="Mẹo vặt video" class="video-table__image" />
                        </td>
                        <td>Video mẹo vặt cuộc sống hay nhất</td>
                        <td>Đời sống</td>
                        <td>Jane Doe</td>
                        <td>21-05-2024</td>
                        <td class="video-table__actions">
                            <a asp-area="Admin" asp-controller="VideoArticleManagement" asp-action="Edit" asp-route-id="2" class="btn btn-warning video-table__action-button" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-danger video-table__action-button" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>