@model AI_Age_FrontEnd.Areas.Admin.Models.AIToolViewModel.AIToolUpdateViewModel
@{
    ViewData["Title"] = "Chỉnh sửa Công cụ AI";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chỉnh sửa Công cụ AI</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AIToolManagement" asp-action="Index">Công cụ AI</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-2"></i> Cập nhật thông tin cho: <strong>@Model.ToolName</strong>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.ToolID" method="post" class="tool-form" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ToolID" />
                <input type="hidden" asp-for="ExistingLogoUrl" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="tool-form__group mb-4">
                    <label asp-for="ToolName" class="tool-form__label"></label>
                    <input asp-for="ToolName" class="form-control tool-form__input">
                    <span asp-validation-for="ToolName" class="text-danger"></span>
                </div>

                <div class="tool-form__group mb-4">
                    <label asp-for="CategoryID" class="tool-form__label"></label>
                    <div class="tool-form__select-wrapper">
                        <select asp-for="CategoryID" asp-items="@Model.Categories" class="form-select tool-form__input">
                            <option value="">-- Chọn một thể loại --</option>
                        </select>
                    </div>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>

                <div class="tool-form__group mb-4">
                    <label asp-for="Description" class="tool-form__label"></label>
                    <textarea asp-for="Description" class="form-control tool-form__input" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="tool-form__group mb-4">
                    <label asp-for="Logo" class="tool-form__label"></label>
                    <div class="tool-form__upload">
                        @{
                            var hasExistingLogo = !string.IsNullOrEmpty(Model.ExistingLogoUrl);
                            var previewContainerClass = hasExistingLogo ? "" : "d-none";
                            var uploadLabelClass = hasExistingLogo ? "d-none" : "";
                        }
                        <div id="image-preview-container" class="tool-form__preview @previewContainerClass">
                            <img id="image-preview" src="@Model.ExistingLogoUrl" alt="Xem trước logo" class="tool-form__preview-image" />
                            <button type="button" id="remove-image-btn" class="tool-form__remove-btn">×</button>
                        </div>
                        <label for="logoUpload" id="upload-label" class="tool-form__upload-label @uploadLabelClass">
                            <span class="tool-form__upload-title">Logo công cụ</span>
                            <i class="fas fa-cloud-upload-alt tool-form__upload-icon"></i>
                            <p class="tool-form__upload-text">Kéo và thả file hoặc nhấn để chọn ảnh mới</p>
                        </label>
                        <input asp-for="Logo" id="logoUpload" type="file" accept="image/*" class="tool-form__upload-input">
                    </div>
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>

                <div class="tool-form__group mb-4">
                    <label asp-for="WebsiteURL" class="tool-form__label"></label>
                    <input asp-for="WebsiteURL" type="text" class="form-control tool-form__input">
                    <span asp-validation-for="WebsiteURL" class="text-danger"></span>
                </div>

                <div class="tool-form__footer">
                    <a asp-action="Index" class="tool-form__button tool-form__button--secondary">Quay lại</a>
                    <button type="submit" class="tool-form__button tool-form__button--primary">
                        <i class="fas fa-save me-1"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}