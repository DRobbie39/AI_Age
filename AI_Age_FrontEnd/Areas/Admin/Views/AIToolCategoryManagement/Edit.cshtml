@model AI_Age_FrontEnd.Areas.Admin.Models.AIToolCategoryViewModel.AIToolCategoryUpdateViewModel
@{
    ViewData["Title"] = "Chỉnh sửa Thể loại";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chỉnh sửa Thể loại</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AIToolCategoryManagement" asp-action="Index">Thể loại công cụ</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-2"></i>
            @* Hiển thị tên thể loại đang sửa một cách động *@
            Cập nhật thông tin cho Thể loại: <strong>@Model.CategoryName</strong>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="tool-category-form">
                @Html.AntiForgeryToken()
                @* Thêm một input ẩn để giữ lại CategoryID khi submit form *@
                <input type="hidden" asp-for="CategoryID" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="tool-category-form__group mb-4">
                    <label asp-for="CategoryName" class="tool-category-form__label"></label>
                    <input asp-for="CategoryName" class="form-control tool-category-form__input">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="tool-category-form__group mb-4">
                    <label asp-for="Description" class="tool-category-form__label"></label>
                    <textarea asp-for="Description" class="form-control tool-category-form__input" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="tool-category-form__footer">
                    <a asp-action="Index" class="tool-category-form__button tool-category-form__button--secondary">Quay lại danh sách</a>
                    <button type="submit" class="tool-category-form__button tool-category-form__button--primary">
                        <i class="fas fa-save me-1"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}