@model AI_Age_FrontEnd.Areas.Admin.Models.AIToolCategoryViewModel.AIToolCategoryCreateViewModel
@{
    ViewData["Title"] = "Thêm mới Thể loại";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới Thể loại</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AIToolCategoryManagement" asp-action="Index">Thể loại công cụ</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-circle me-2"></i>
            Thông tin Thể loại mới
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="tool-category-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="tool-category-form__group mb-4">
                    <label asp-for="CategoryName" class="tool-category-form__label"></label>
                    <input asp-for="CategoryName" class="form-control tool-category-form__input" placeholder="Ví dụ: Tạo nội dung, Thiết kế Logo...">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="tool-category-form__group mb-4">
                    <label asp-for="Description" class="tool-category-form__label"></label>
                    <textarea asp-for="Description" class="form-control tool-category-form__input" rows="4" placeholder="Mô tả ngắn về thể loại này..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="tool-category-form__footer">
                    <a asp-action="Index" class="tool-category-form__button tool-category-form__button--secondary">Quay lại danh sách</a>
                    <button type="submit" class="tool-category-form__button tool-category-form__button--primary">
                        <i class="fas fa-save me-1"></i> Lưu lại
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}