@{
    ViewData["Title"] = "Thêm mới Thể loại";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới Thể loại</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="#">Thể loại công cụ</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-circle me-2"></i>
            Thông tin Thể loại mới
        </div>
        <div class="card-body">
            <form action="#" method="post" class="tool-category-form">
                <div class="tool-category-form__group mb-4">
                    <label for="categoryName" class="tool-category-form__label">Tên thể loại</label>
                    <input id="categoryName" name="categoryName" type="text" class="form-control tool-category-form__input" placeholder="Ví dụ: Tạo nội dung, Thiết kế Logo...">
                </div>

                <div class="tool-category-form__group mb-4">
                    <label for="description" class="tool-category-form__label">Mô tả</label>
                    <textarea id="description" name="description" class="form-control tool-category-form__input" rows="4" placeholder="Mô tả ngắn về thể loại này..."></textarea>
                </div>

                <div class="tool-category-form__footer">
                    <a href="#" class="tool-category-form__button tool-category-form__button--secondary">Quay lại danh sách</a>
                    <button type="submit" class="tool-category-form__button tool-category-form__button--primary">
                        <i class="fas fa-save me-1"></i> Lưu lại
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
