@{
    ViewData["Title"] = "Quản lý Thể loại Công cụ AI";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Thể loại Công cụ AI</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Thể loại công cụ</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header tool-category-card__header">
            <div class="tool-category-card__title">
                <i class="fas fa-sitemap me-2"></i>
                Danh sách Thể loại
            </div>
            <a asp-area="Admin" asp-controller="AIToolCategoryManagement" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover tool-category-table">
                <thead>
                    <tr>
                        <th>Mã thể loại</th>
                        <th>Tên thể loại</th>
                        <th>Mô tả</th>
                        <th>Ngày tạo</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Tạo hình ảnh</td>
                        <td>Các công cụ giúp tạo hình ảnh từ văn bản.</td>
                        <td>21-05-2024</td>
                        <td class="tool-category-table__actions">
                            <a asp-area="Admin" asp-controller="AIToolCategoryManagement" asp-action="Edit" asp-route-id="1" class="btn btn-warning tool-category-table__action-button" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-danger tool-category-table__action-button" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Tạo nội dung</td>
                        <td>Các công cụ giúp viết văn, làm thơ, soạn email.</td>
                        <td>20-05-2024</td>
                        <td class="tool-category-table__actions">
                            <a asp-area="Admin" asp-controller="AIToolCategoryManagement" asp-action="Edit" asp-route-id="2" class="btn btn-warning tool-category-table__action-button" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-danger tool-category-table__action-button" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
