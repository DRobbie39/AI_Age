@model AI_Age_FrontEnd.Areas.Admin.Models.UserViewModel.UserUpdateViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chỉnh sửa Người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="UserManagement" asp-action="Index">Quản lý Người dùng</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-edit me-2"></i>
            Cập nhật thông tin cho: <strong>@Model.Username</strong>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="user-form">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="FullName" class="user-form__label"></label>
                        <input asp-for="FullName" class="form-control user-form__input">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="Username" class="user-form__label"></label>
                        <input asp-for="Username" class="form-control user-form__input" readonly>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="RoleId" class="user-form__label"></label>
                        <select asp-for="RoleId" class="form-select user-form__input">
                            <option value="1">Admin</option>
                            <option value="3">Người dùng</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="PhoneNumber" class="user-form__label"></label>
                        <input asp-for="PhoneNumber" class="form-control user-form__input">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="DateOfBirth" class="user-form__label"></label>
                        <input asp-for="DateOfBirth" class="form-control user-form__input" type="date">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="Gender" class="user-form__label"></label>
                        <select asp-for="Gender" class="form-select user-form__input">
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Address" class="user-form__label"></label>
                    <textarea asp-for="Address" class="form-control user-form__input" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="user-form__footer">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}