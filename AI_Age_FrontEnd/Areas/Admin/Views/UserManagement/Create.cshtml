@model AI_Age_FrontEnd.Areas.Admin.Models.UserViewModel.UserCreateViewModel

@{
    ViewData["Title"] = "Thêm mới Người dùng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới Người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="UserManagement" asp-action="Index">Quản lý Người dùng</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-plus me-2"></i>
            Thông tin Người dùng mới
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="user-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="FullName" class="user-form__label"></label>
                        <input asp-for="FullName" class="form-control user-form__input" placeholder="Ví dụ: Nguyễn Văn An">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="Username" class="user-form__label"></label>
                        <input asp-for="Username" class="form-control user-form__input" placeholder="Ví dụ: nguyenvana">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="user-form__label"></label>
                    <input asp-for="Password" class="form-control user-form__input" placeholder="Nhập mật khẩu (ít nhất 6 ký tự)">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="RoleId" class="user-form__label"></label>
                        <select asp-for="RoleId" class="form-select user-form__input">
                            <option value="1">Admin</option>
                            <option value="3" selected>Người dùng</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="PhoneNumber" class="user-form__label"></label>
                        <input asp-for="PhoneNumber" class="form-control user-form__input" placeholder="Ví dụ: 0987654321">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="user-form__footer">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu lại
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}