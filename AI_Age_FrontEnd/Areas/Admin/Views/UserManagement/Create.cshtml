@{
    ViewData["Title"] = "Thêm mới Người dùng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới Người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Quản lý Người dùng</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-plus me-2"></i>
            Thông tin Người dùng mới
        </div>
        <div class="card-body">
            <form action="#" method="post" class="user-form">

                <div class="row">
                    <div class="col-md-6">
                        <div class="user-form__group mb-4">
                            <label for="fullName" class="user-form__label">Họ và tên</label>
                            <input id="fullName" name="FullName" type="text" class="form-control user-form__input" placeholder="Ví dụ: Nguyễn Văn A" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="user-form__group mb-4">
                            <label for="username" class="user-form__label">Tên đăng nhập</label>
                            <input id="username" name="Username" type="text" class="form-control user-form__input" placeholder="Ví dụ: nguyenvana" required>
                        </div>
                    </div>
                </div>

                <div class="user-form__group mb-4">
                    <label for="password" class="user-form__label">Mật khẩu</label>
                    <input id="password" name="Password" type="password" class="form-control user-form__input" placeholder="Nhập mật khẩu" required>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="user-form__group mb-4">
                            <label for="phoneNumber" class="user-form__label">Số điện thoại</label>
                            <input id="phoneNumber" name="PhoneNumber" type="tel" class="form-control user-form__input" placeholder="Ví dụ: 0987654321">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="user-form__group mb-4">
                            <label for="dateOfBirth" class="user-form__label">Ngày sinh</label>
                            <input id="dateOfBirth" name="DateOfBirth" type="date" class="form-control user-form__input">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="user-form__group mb-4">
                            <label for="gender" class="user-form__label">Giới tính</label>
                            <select id="gender" name="Gender" class="form-select user-form__input">
                                <option value="Male">Nam</option>
                                <option value="Female">Nữ</option>
                                <option value="Other">Khác</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="user-form__group mb-4">
                            <label for="roleId" class="user-form__label">Vai trò</label>
                            <select id="roleId" name="RoleID" class="form-select user-form__input" required>
                                <option value="1">Admin</option>
                                <option value="2" selected>User</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="user-form__group mb-4">
                    <label for="address" class="user-form__label">Địa chỉ</label>
                    <textarea id="address" name="Address" class="form-control user-form__input" rows="3" placeholder="Ví dụ: 123 Đường ABC, Phường X, Quận Y, TP.HCM"></textarea>
                </div>

                <div class="user-form__group mb-4">
                    <label for="avatar" class="user-form__label">Avatar (URL)</label>
                    <input id="avatar" name="Avatar" type="text" class="form-control user-form__input" placeholder="Dán đường dẫn URL hình ảnh vào đây...">
                </div>

                <div class="user-form__footer">
                    <a href="#" class="user-form__button user-form__button--secondary">Quay lại danh sách</a>
                    <button type="submit" class="user-form__button user-form__button--primary">
                        <i class="fas fa-save me-1"></i> Lưu lại
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>