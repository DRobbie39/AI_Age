@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Người dùng</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header user-management-card__header">
            <div class="user-management-card__title">
                <i class="fas fa-users me-2"></i>
                Danh sách Người dùng
            </div>
            <a asp-area="Admin" asp-controller="UserManagement" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body p-0">
            <table id="usersTable" class="table table-hover user-management-table">
                <thead>
                    <tr>
                        <th class="text-center">Avatar</th>
                        <th>Tên người dùng</th>
                        <th class="text-center">Tên đăng nhập</th>
                        <th class="text-center">Vai trò</th>
                        <th class="text-center">Ngày đăng ký</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">
                            <img src="https://i.pravatar.cc/150?u=a042581f4e29026704d" alt="Avatar" class="user-management-table__avatar">
                        </td>
                        <td>
                            <span class="user-management-table__fullname">Nguyễn Văn An</span>
                        </td>
                        <td class="text-center">nguyenvana</td>
                        <td class="text-center">Admin</td>
                        <td class="text-center">22-05-2024</td>
                        <td class="user-management-table__actions">
                            <a asp-area="Admin" asp-controller="UserManagement" asp-action="Edit" asp-route-id="1" class="user-management-table__action-button btn-warning" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn-danger user-management-table__action-button" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">
                            <img src="https://i.pravatar.cc/150?u=a042581f4e29026705d" alt="Avatar" class="user-management-table__avatar">
                        </td>
                        <td>
                            <span class="user-management-table__fullname">Trần Thị Bích</span>
                        </td>
                        <td class="text-center">tranthib</td>
                        <td class="text-center">Member</td>
                        <td class="text-center">20-05-2024</td>
                        <td class="user-management-table__actions">
                            <a asp-area="Admin" asp-controller="UserManagement" asp-action="Edit" asp-route-id="2" class="user-management-table__action-button btn-warning" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn-danger user-management-table__action-button" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
