@{
    ViewData["Title"] = "Thêm mới Thể loại Bài viết";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới Thể loại Bài viết</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="ArticleCategoryManagement" asp-action="Index">Thể loại bài viết</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-circle me-2"></i>
            Thông tin Thể loại Bài viết mới
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="article-category-form">
                <div class="article-category-form__group mb-4">
                    <label for="categoryName" class="article-category-form__label">Tên thể loại</label>
                    <input id="categoryName" name="categoryName" type="text" class="form-control article-category-form__input" placeholder="Ví dụ: Công nghệ, Đời sống, Giáo dục...">
                </div>

                <div class="article-category-form__footer">
                    <a asp-area="Admin" asp-controller="ArticleCategoryManagement" asp-action="Index" class="article-category-form__button article-category-form__button--secondary">Quay lại danh sách</a>
                    <button type="submit" class="article-category-form__button article-category-form__button--primary">
                        <i class="fas fa-save me-1"></i> Lưu lại
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
